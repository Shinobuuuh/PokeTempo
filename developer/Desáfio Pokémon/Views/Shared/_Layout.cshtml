<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Desáfio_Pokémon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Desáfio_Pokémon.styles.css" asp-append-version="true" />
</head>
<body class="background-fundo">


    <header>
        <div class="row">
            <div class="col">
                @Html.ActionLink("Inicio", "Index", "Home")
            </div>
        </div>
        <div class="row">
            <div class="col">
                @Html.ActionLink("Procurar Cidade", "SearchCity", "Home")
            </div>
        </div>
    </header>


    <div class="container p-6">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="pikachu-running"></footer>


</body>
</html>
